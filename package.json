{
  "name": "g-asset-forge",
  "version": "1.0.0",
  "description": "Game Asset Creation Tool for Enterprise Networks",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:sequential": "cross-env NODE_ENV=development npm run dev:main && concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cross-env NODE_ENV=development webpack --config webpack.renderer.dev.config.js --watch",
    "dev:renderer:serve": "cross-env NODE_ENV=development webpack serve --config webpack.renderer.config.js --mode development",
    "dev:main": "cross-env NODE_ENV=development webpack --config webpack.main.config.js --mode development --watch",
    "dev:electron": "cross-env NODE_ENV=development wait-on dist/renderer/index.html && electron dist/main/main.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.config.js --mode production",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=development electron dist/main/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "clean": "node scripts/clean.js",
    "clean:dist": "node scripts/clean.js dist",
    "clean:cache": "node scripts/clean.js cache",
    "clean:all": "node scripts/clean.js all",
    "reinstall": "npm run clean:all && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "game-assets",
    "design-tool"
  ],
  "author": "G-Asset Forge Team",
  "license": "MIT",
  "eslintIgnore": [
    "**/*.md",
    "*.md",
    "docs/",
    "开发文档/",
    "README.md",
    "dist/",
    "node_modules/"
  ],
  "devDependencies": {
    "@types/fabric": "^5.3.10",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/stats.js": "^0.17.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.1",
    "cross-env": "^10.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^17.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "events": "^3.3.0",
    "global": "^4.4.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "wait-on": "^8.0.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "antd": "^5.9.2",
    "fabric": "^5.3.0",
    "fs-extra": "^11.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.5",
    "zustand": "^4.4.1",
    "fractional-indexing": "^3.2.0",
    "stats.js": "^0.17.0",
    "vue": "^3.3.4",
    "@vue/runtime-dom": "^3.3.4",
    "styled-components": "^6.1.0",
    "framer-motion": "^10.16.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "react-colorful": "^5.6.1"
  }
}
