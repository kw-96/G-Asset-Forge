{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["renderer/components/*"],
      "@/stores/*": ["renderer/stores/*"],
      "@/utils/*": ["renderer/utils/*"],
      "@/types/*": ["types/*"],
      "@/core/*": ["renderer/core/*"],
      "@/ui/*": ["renderer/ui/*"],
      "@/engines/*": ["renderer/engines/*"],
      "@suika/*": ["renderer/engines/suika/*"],
      "@h5-editor/*": ["renderer/engines/h5-editor/*"],
      "@fabric/*": ["renderer/engines/fabric/*"]
    },
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.md",
    "docs/",
    "CLAUDE.md",
    "README.md"
  ]
}